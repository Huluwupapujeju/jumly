  script(src="http://static.evernote.com/noteit.js")
  script(src="#{js_dir}/base64.js",type="text/javascript")
  script(src="#{js_dir}/bitly.coffee",type="text/coffeescript")
  script(src="#{js_dir}/TryJUMLY.Tutorial.coffee",type="text/coffeescript")
  script(src="#{js_dir}/TryJUMLY.utils.coffee",type="text/coffeescript")
