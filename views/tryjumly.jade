!!! 5
html
  head
    - bootstrap_dir = "bootstrap/docs/assets/"
    meta(charset='utf-8')
    meta(name="viewport",content="width=device-width,initial-scale=1.0")
    link(type='text/css',rel='stylesheet',href="#{bootstrap_dir}/css/bootstrap.css")
    link(rel="stylesheet",href="docs.css")
    link(rel="stylesheet",href="tryjumly.css")
    link(rel="stylesheet",href="3rd-party.css")
    script(src="javascripts/jquery.js")
    script(src="javascripts/coffee-script.js")
    script(src="javascripts/knockout.js")
    script(src="#{bootstrap_dir}js/bootstrap-alert.js")
    script(src="#{bootstrap_dir}js/bootstrap-tooltip.js")
    script(src="#{bootstrap_dir}js/bootstrap-modal.js")
    script(src="#{bootstrap_dir}js/bootstrap-dropdown.js")
    != js('jumly')
    title!=title
  body
    - i18n = {}
    - i18n._ = function() {return arguments[0];}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          h3 <a class="brand" href="/#">JUMLY</a>
    .container-fluid
      .page-header(style="margin-top:40px")
        h2 Try JUMLY
          small= i18n._('Sandbox for sequence diagram')
      .row
        .span1#user-actions
          a.btn#btnToShowUrl("data-toggle"="modal",href="#url-to-show")
            i.icon-share
            <br>
            =i18n._('Share')
          a.btn("data-toggle"="modal",href="#jumly-snippet")
            i.icon-tag
            <br>
            =i18n._('Snippet')
          a.btn("data-bind"="click:want.toCommentOnDisqus")
            i.icon-comment
            <br>
            =i18n._('Comment')
        .span5
          //-# DISQUS Thread
          #disqus_thread("data-bind"="visible:disqusOpened()")

          textarea#jumlipt("data-bind"="value:jumly.jumlipt,valueUpdate:'afterkeydown'",rows=26,placeholder="#{i18n._('Write JUMLIPT here, or click one of examples.')}")
          #3rd-party-buttons
            <div class="fb-like" data-send="true" data-layout="button_count" data-width="0" data-show-faces="false"></div>
            <a style='margin-left:-38px;' href="#" onclick="Evernote.doClip({contentId:'diagram-container',providerName:'Try JUMLY'}); return false;"><img src="http://static.evernote.com/article-clipper.png" alt="Clip to Evernote"/></a>
            <div class="g-plusone" data-size="medium" data-href="http://jumly.heroku.com/TryJUMLY"></div>
            <a style='margin-left:-20px;' href="https://twitter.com/share" class="twitter-share-button" data-via="jumly1" data-related="jumly1" data-hashtags="jumly">Tweet</a>
            <script type="text/javascript" src="http://growbutton.com/javascripts/button.js?apikey=0d26ac70-3a17-012f-064b-12313f00aced&shape=rectangle"></script>
        .span6.columns
          #diagram-container("data-bind"="jumly:diagram,success:jumly.success,error:jumly.error")
          include tutorial
    .bottombar
      |copyright...
      |JUMLY v#{VERSION}
    
    .lightbox-background.hide("data-bind"="css:cssStylesOfBrowser")
      .fixed.messagebox
        .inner
          h2= i18n._('Caution.')
          p= i18n._('caution.browser.d')

    .alert.alert-block.alert-error.notice.hide("data-bind"='template:{name:"alert-error",data:jumly.errorReason}')
    script#alert-error(type="text/html")
      h3 Error
      p
        strong type: ${type}
        ${message}
      p
        strong message:
        span.message ${cause}

    .alert.alert-block.alert-success.notice.hide
      a.close x
      h3.alert-heading Success
      Rendering was succeeded.


