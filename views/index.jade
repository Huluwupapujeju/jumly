header#masthead
  .inner
    .container
      .row
        div.span4
          span.logo JUMLY
        div.span7
          p.lead Be concentrative into your idea with JUMLY.
          p Latest version 0.1.2

h1= title
  p Welcome to #{title}

  :jumly_sequence
    @found "You", ->
      @create "UML diagram"

  :jumly_class
    @def "You":
      stereotype:"human"
      attrs     :["age", "height"]
      methods   :["run", "think"]

  :jumly_usecase
    @actor "You":use:[1, 2]
    @usecase 1:"Render Diagram"
    @usecase 2:"Arrange Diagram"
