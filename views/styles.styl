@import url("https://fonts.googleapis.com/css?family=Coda:800|Questrial|Michroma")
@import url("bootstrap/docs/assets/css/bootstrap.css")
//@import url("bootstrap/docs/assets/css/bootstrap-responsive.css")
//@import url('http://mplus-fonts.sourceforge.jp/webfonts/mplus-1p-regular.ttf')
@import url("syntaxhighlighter.css")

h1.logo
  font-family Coda,Tahoma,sans-serif
  font-weight extra-bold
  text-align center

h2,h3,h4
  font-family Coda,Tahoma,sans-serif
  font-size 18px

a
  color #690

.syntaxhighlighter
  width auto !important
  .gutter .line
    border-right 3px solid rgba(6*16/2, 9*16/2, 0, 0.5) !important
  .string, .string a
    color #690 !important

body
  background-color #f8f8f8
  //font-family mplus-1p-regular
  //font-family "Lucida Grande","Lucida Sans Unicode","Lucida Sans",Verdana,Tahoma,sans-serif
  //line-height 180%
  border-top solid 6px #8cc84b

//(max-width:767px) or (min-width:768px) or (max-width:979px) or (min-width:1200px)
@media (max-width:480px)
  h1,h2,h3,h4,h5,h6
    font-size 100%

.buttons
  text-align center
  margin-top 2px
  a
    text-decoration none
  label
    display inline-block
  .button
    display inline-block
    padding 8px 0
    border-radius 2px
    background-color darken(white, 25%)
    color #46483e
    text-align center

#intro
  line-height 180%

#example1
  .diagram
    margin-left auto
    margin-right auto
  div.sequence-diagram.diagram ~ div
    margin-left 80px
    margin-right 80px
  .buttons
    .button
      padding 4px 0
      width 152px
      -webkit-transition background-color 0.2s ease-in-out
      &:hover
        background-color darken(darken(white, 25%), 14%)
      &.selected
        background-color #8bc84b
    label:nth-child(1), label:nth-child(2)
      a
        margin-right: 2px
  &.normal
    color inherit
  &.simple *
    box-shadow none
    -webkit-box-shadow none
    -moz-box-shadow none
    -o-box-shadow none
    .object
      .name
        border-top-color transparent
        border-right-color transparent
        border-left-color transparent
        background-color transparent
    .occurrence
      background-color white
  &.funcy
    *
      box-shadow none
      -webkit-box-shadow none
      -moz-box-shadow none
      -o-box-shadow none
    .object:nth-child(1) .name
      border-color darken(#0095b6, 25%)
      background-color #0095b6
      color darken(#0095b6, 50%)
    .object:nth-child(3) .name
      border-color darken(#ffba00, 25%)
      background-color #ffba00
      color darken(#ffba00, 50%)
      width 160px
      margin-left -30px
    .object:nth-child(5) .name
      border-color darken(#f0dc82, 25%)
      background-color #f0dc82
      color darken(#f0dc82, 50%)
    .object .name
      border-radius 12px
      font-weight bold
    .occurrence
      border-radius 8px
      //background-color darken(#bfff00, 10%)
      //border-color darken(#bfff00, 25%)
    .line
      margin-left 49%
      border-left dotted 5px darken(#bfff00, 25%)

#getting-started
  margin-top 60px
  h2
    font-size 18px
  .diagram
    margin-left auto
    margin-right auto
    margin-top 20px
    margin-bottom 20px

#links
  margin-top 20px
  margin-bottom 30px
  .buttons
    a.github.button, a.apidocs.button
      width 99px 
      -webkit-transition background-color 0.2s ease-in-out
      &:hover
        background-color darken(darken(white, 25%), 14%)
    .github
      margin-right 1px
    .apidocs
      margin-left 1px
  a.download.button
    display block
    text-decoration none
    width 200px
    margin-left auto
    margin-right auto
    text-align center
    padding 8px 0
    border-radius 2px
    background-color #8bc84b
    -webkit-transition background-color 0.2s ease-in-out
    &:hover
      background-color darken(#8bc84b, 14%)
    color #46483e

#bg-why
  margin-top 60px
  dd
    margin-bottom 14px

#example-showcase
  background-color #33342d
  color #d2d8ba
  padding-bottom 60px
  border-top solid 1px darken(white, 33%)
  border-bottom solid 1px darken(#33342d, 7%)

#information
  background-color #46483e
  color #d2d8ba
  padding-bottom 60px
  border-bottom solid 1px darken(#46483e, 7%)

  .copyright
    margin-top 30px
    text-align center
    font-size smaller

  #requirement, #license
    font-size smaller
