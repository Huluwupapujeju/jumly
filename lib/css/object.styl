.centering
  margin-left: auto
  margin-right: auto

.unimportant
  z-index: 0

.primary_border
  border: 2px solid #808080

.diagram
  position: relative
  font-size: 10pt

.diagram .participant.iconified
  text-align: center

.diagram .participant.iconified .name
  height: auto
  padding-top: .4em
  padding-bottom: .4em

.diagram .participant.iconified .icon-container
  position: relative
  margin-bottom: 5px

.diagram .participant.iconified canvas.icon
  border: 0
  padding-top: 2px
  padding-bottom: 2px

